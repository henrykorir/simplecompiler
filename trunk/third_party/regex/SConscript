# SConscript

import os
Import('aEnv')

cppfiles = ['xregex.cpp']

libboost = 'boost-dev'

if os.sys.platform.lower() == 'win32':
    incboost = r'D:\Program Files\boost'
else:
    incboost = ''

aEnv['regexlib'] = ['regex', libboost]

aEnv.Library(target = 'regex', source = cppfiles, LIBS=[libboost], CPPPATH=[incboost])
